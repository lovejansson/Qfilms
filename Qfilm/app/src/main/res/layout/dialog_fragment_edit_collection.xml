<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialog_fragment_edit_collection"

    android:orientation="vertical"
    android:background="?attr/colorSecondary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView

        android:id="@+id/tv_heading_edit_collection_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_outer_small"
        android:layout_marginTop="@dimen/margin_outer_small"
        android:layout_marginEnd="@dimen/margin_outer_small"
        android:layout_marginBottom="16dp"
        android:textAppearance="?attr/textAppearanceHeadline2"
        />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/layout_et_collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_outer_small"
        android:layout_marginEnd="@dimen/margin_outer_small"
        app:errorEnabled="true"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/hint_collection_name"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_collection_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/margin_outer_small"
        android:layout_marginEnd="@dimen/margin_outer_small"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btn_save"
        style="@style/Widget.Qfilm.Button.TextButton"

        android:text="@string/btn_save"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Widget.Qfilm.Button.TextButton"

        android:text="@string/btn_cancel"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /></LinearLayout>

</LinearLayout>